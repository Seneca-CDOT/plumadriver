{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom"],
    "module": "commonjs",
    "outDir": "./build",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es2018",
    "watch": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["./src"]
}
